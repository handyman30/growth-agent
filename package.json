{
  "name": "handylabs-growth-agent",
  "version": "1.0.0",
  "description": "AI-powered growth marketing agent for HandyLabs",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/start.ts",
    "build": "tsc",
    "start": "tsx src/start.ts",
    "scrape:google": "tsx src/scrapers/google.ts",
    "scrape:instagram": "tsx src/scrapers/instagram.ts",
    "test:google": "tsx src/scrapers/google.ts",
    "test:instagram": "tsx src/scrapers/instagram.ts",
    "test:email": "tsx src/utils/test-sendgrid.ts",
    "test:hunter": "curl -s http://localhost:3000/api/hunter-credits | jq .",
    "health": "tsx src/utils/health-check.ts",
    "email": "tsx src/email/sender.ts",
    "dashboard": "tsx src/dashboard/server.ts",
    "config": "tsx src/utils/search-config.ts",
    "test": "npm run health",
    "quick-test": "tsx src/utils/test-system.ts",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "clean": "rm -rf dist node_modules package-lock.json",
    "setup": "npm install && cp env.example .env && echo 'Please fill in your API keys in .env'",
    "commit": "./scripts/dev-commit.sh",
    "agent:analyze": "tsx src/agents/improvement-agent.ts",
    "agent:pr": "tsx src/agents/github-pr-agent.ts",
    "agent:scheduler": "tsx src/agents/scheduler.ts",
    "agent:manual": "tsx src/agents/improvement-agent.ts && tsx src/agents/github-pr-agent.ts"
  },
  "keywords": [
    "automation",
    "marketing",
    "instagram",
    "email",
    "google"
  ],
  "author": "Handy Hasan",
  "license": "ISC",
  "dependencies": {
    "@sendgrid/mail": "^8.1.0",
    "@types/cron": "^2.0.1",
    "airtable": "^0.12.2",
    "apify-client": "^2.9.3",
    "axios": "^1.6.2",
    "cheerio": "^1.0.0-rc.12",
    "cron": "^4.3.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "node-cron": "^3.0.3",
    "openai": "^4.24.1",
    "puppeteer": "^21.6.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "@types/node-cron": "^3.0.11",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
